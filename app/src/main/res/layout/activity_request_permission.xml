<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@color/darkgrey"
        tools:context="whatsapp.whtools.statusdownloader.activities.RequestPermissionActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:background="@mipmap/green_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        app:lottie_enableMergePathsForKitKatAndAbove="true"
            android:id="@+id/animation_view"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:lottie_fileName="file_transfer.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <TextView
            android:text="We need some permissions to work with stickers."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.494" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/grant_permissions_button"/>
    <Button
            android:text="GRANT ACCESS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grant_permissions_button"
        android:background="@drawable/back_white"
        android:textColor="@color/white"
        android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="304dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
    />

</androidx.constraintlayout.widget.ConstraintLayout>